run{
set until sequence 2;

set newname for datafile 3 to "/oracle/disk2/ORCL2/SYSAUX_01.dbf";
set newname for datafile 1 to "/oracle/disk2/ORCL2/SYSTEM_01.dbf";
set newname for datafile 4 to "/oracle/oradata/ORCL2/UNDOTBS1_01.dbf";
set newname for datafile 6 to "/oracle/oradata/ORCL2/USERS_01.dbf";

restore database;
switch datafile all;
recover database;
alter database open resetlogs;
}

